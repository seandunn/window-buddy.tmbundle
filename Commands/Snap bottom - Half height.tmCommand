	<key>command</key>
	<string>#!/usr/bin/env ruby

screen_dimentions = `"$TMTOOLS" get mainScreenSize`
screen_width = screen_dimentions.split(',').first.to_i
screen_height = screen_dimentions.split(',').last.to_i

window_origin_and_size = `"$TMTOOLS" get windowOriginAndSize`

window_x_origin = window_origin_and_size.split(',')[0].to_i
window_width = window_origin_and_size.split(',')[2].to_i
window_height = window_origin_and_size.split(',')[3].to_i

new_height = (screen_height / 2) - 25


# Set new window size
`"$TMTOOLS" set windowSize '{width=#{window_width};height=#{new_height};}'`


window_x_origin = [window_x_origin, 1].max
# Set new origin
`"$TMTOOLS" set windowOrigin '{x=#{window_x_origin};y=#{screen_height};}'`</string>
